import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner s=new Scanner(System.in);
        
        int N=s.nextInt();
        int a[]=new int[N]; 
        int count=0;
        for(int i=0;i<N;i++){
            a[i]=s.nextInt();
            if(a[i]%2==0)
              count++;
        }
    System.out.println(count);
    }
        
}
