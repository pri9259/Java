import java.util.Scanner;

public class Solution {

    public static void main(String[] args) {
        Scanner s= new Scanner(System.in);
        int N =s.nextInt();
        int sum = 0;
        if (N>= 1 && N <= 1000000) {
             sum = N * (N+1)/2;
        
        System.out.println(sum);
        }
        s.close();
        
    }
}
